<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../gui/gui.xsd">
	<window id="memeBrowser" title="Meme Browser" rx="50" x="-300" ry="50" y="-200" w="600" h="400" sizeable="true">
		<image    x="10"  y="25" w="32" h="32" src="meme_browser/icon.jpg" />
		<label    x="50"  y="25" w="50"  h="15" text="Service:" />
		<combobox x="100" y="25" w="150" h="100" id="serviceComboBox" text="" />
		
		<label    x="50"  y="50" w="50" h="15" text="Image:" />
		<button   x="100" y="50" w="25" h="25" id="prevBtn" text="&lt;" />
		<edit     x="130" y="52" w="45" h="20" id="numEdit" text="1" pattern="\d*" />
		<button   x="180" y="50" w="25" h="25" id="nextBtn" text=">" />
		<button   x="220" y="50" w="80" h="25" id="randomBtn" text="Random" />
		
		<scrollpane x="10" y="85" rw="100" rh="100" w="-20" h="-125" id="scrollPane" />
		<button rx="50" x="-40" ry="100" y="-35" w="80" h="25" id="closeBtn" text="Close" />
	</window>
</gui>
