<gui>
	<window id="pm" title="Private Chat" rx="50" x="-160" ry="50" y="-120" w="320" h="240" minw="200" minh="150" alpha="196">
		<image x="10" y="25" w="32" h="32" src="img/pm.png" />
		<memo id="chat" x="50" y="25" rw="100" w="-60" rh="100" h="-100" readonly="true" />
		<label x="10" ry="100" y="-65" w="45" h="15" text="Say:" />
		<edit id="input" x="55" ry="100" y="-70" rw="100" w="-140" h="25" maxlen="128" focus="true" defbtn="sendBtn" />
		<button id="sendBtn" rx="100" x="-80" ry="100" y="-70" w="70" h="25" text="Send" />
		<button id="closeBtn" rx="100" x="-70" ry="100" y="-35" w="60" h="25" text="Close" />
		<button id="bgBtn" rx="100" x="-155" ry="100" y="-35" w="80" h="25" text="In background" />
		<label id="playerLeftLabel" x="10" ry="100" y="-35" rw="100" w="-170" h="15" text="Player has left the game." visible="false" color="#FF0000" />
	</window>
	
	<window id="loginWnd" title="Login" rx="50" x="-150" ry="50" y="-133" w="300" h="265" sizeable="false">
		<image rx="50" x="-32" y="30" w="64" h="64" src="img/login.png" />
		
		<label id="info" x="10" y="90" rw="100" w="-20" h="20" text="Please login to save your statistics" align="center" />
		
		<label x="30" y="125" w="80" h="15" text="Username:" />
		<edit id="name" x="120" y="120" w="140" h="25" maxlen="128" focus="true" defbtn="logBtn" />
		
		<label x="30" y="155" w="80" h="15" text="Password:" />
		<edit id="pw" x="120" y="150" w="140" h="25" maxlen="128" masked="true" defbtn="logBtn" />
		
		<checkbox id="remember" x="30" y="180" w="160" h="25" text="Remember me" />
		
		<button id="logBtn" rx="50" x="-175" y="220" w="80" h="30" text="Login" />
		<button id="regBtn" rx="50" x="-45" y="220" w="80" h="30" text="Register" />
		<button id="guestBtn" rx="50" x="50" y="220" w="100" h="30" text="Play as guest" />
	</window>
	
	<window id="registerWnd" title="Register" rx="50" x="-175" ry="50" y="-130" w="350" h="260" sizeable="false">
		<image rx="50" x="-32" y="25" w="64" h="64" src="img/register.png" />
		
		<label id="info" x="10" y="90" rw="100" w="-20" h="20" text="Register new account" align="center" />
		
		<label x="10" y="125" w="120" h="20" text="Username:" />
		<edit id="name" x="130" y="120" w="200" h="25" maxlen="128" focus="true" />
		
		<label x="10" y="155" w="120" h="20" text="Password:" />
		<edit id="pw" x="130" y="150" w="200" h="25" maxlen="128" masked="true" />
		
		<label x="10" y="185" w="120" h="20" text="Retry password:" />
		<edit id="pw2" x="130" y="180" w="200" h="25" maxlen="128" masked="true" />
		
		<button id="regBtn" x="15" y="220" w="150" h="30" text="Register" />
		<button id="backBtn" rx="100" x="-175" y="220" w="150" h="30" text="Back" />
	</window>
</gui>
